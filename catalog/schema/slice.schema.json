{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Geary Slice Manifest",
  "type": "object",
  "required": [
    "version",
    "slice"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "integer",
      "enum": [
        1
      ]
    },
    "slice": {
      "type": "object",
      "required": [
        "id",
        "number",
        "band",
        "title"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+([a-z0-9-]*[a-z0-9])$"
        },
        "number": {
          "type": "integer",
          "minimum": 0,
          "maximum": 99
        },
        "band": {
          "type": "string",
          "enum": [
            "boot",
            "evidence",
            "services",
            "ui",
            "domain",
            "wrapper",
            "comms+integrations",
            "exec"
          ]
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        }
      }
    },
    "depends_on": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "deploy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "manifests": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "provides": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "objects": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "apex": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "lwc": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "reports": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "default": {}
    },
    "spine": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "owns_mailbox": {
          "type": "string"
        },
        "sender_address": {
          "type": "string"
        },
        "template_prefixes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "comms_ledger": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "object",
            "spine_field",
            "spine_value"
          ],
          "properties": {
            "object": {
              "type": "string"
            },
            "spine_field": {
              "type": "string"
            },
            "spine_value": {
              "type": "string"
            }
          }
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": true,
      "default": {},
      "properties": {
        "comms": {
          "type": "object"
        },
        "deployment": {
          "type": "object"
        }
      }
    }
  }
}
